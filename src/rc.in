    import profile
    sys.stderr.write("*** Profiling Enabled ***\n")
    sys.argv = filter(lambda x:x != "--rc-profile", sys.argv)
    profile.run("rcmain.main(rc_version)")
else:
    rcmain.main(rc_version)
    
